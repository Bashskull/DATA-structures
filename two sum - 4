/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class BSTIterator {
public:
    stack<TreeNode*> st;
    bool reversed;
    void stackall(TreeNode* node){
        while(node){
            st.push(node);
            if(!reversed){
                node=node->left;
            }
            else if (reversed){
                node=node->right;
            }
        }
    }
    BSTIterator(TreeNode* root, bool rev) {
        reversed=rev;
        stackall(root);
    }
    int val(){
        return st.top()->val;
    }
    int next() {
        int ans=st.top()->val;
        TreeNode* node=st.top();
        st.pop();
        if(!reversed){
            if(node->right){
                stackall(node->right);
            }
        }
        else if (reversed){
            if(node->left){
                stackall(node->left);
            }
        }
        return ans;
    }
    
};
class Solution {
public:
    bool findTarget(TreeNode* root, int k) {
        if(!root) return false;
        //TreeNode* target=TreeNode(k);
        BSTIterator node1=BSTIterator(root,false);
        BSTIterator node2=BSTIterator(root,true);
        while(node2.val()>node1.val()){
            if(node2.val()+node1.val()==k) return true;
            else if (node1.val()+node2.val()>k){
                node2.next();
            }
            else{
                node1.next();
            }
        }
        return false;
    }
};

//obviously you can do simple in order and store in a vector and then two sum problem without the need of sorting so O(N) time and space.
//the above solution reduces space required.
