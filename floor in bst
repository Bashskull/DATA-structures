/*
class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = right = NULL;
    }
};
*/

class Solution {
  public:
    int floor(Node* root, int x) {
        int floor=-1;
        
        while(root!=NULL){
            if(root->data==x){
                floor=x;
                return floor;
            }
            if(root->data<x){
                floor=root->data;
                root=root->right;
            }
            else root=root->left;
        }
        return floor;
    }
};
