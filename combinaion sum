class Solution {
public:
    void recurse(int index,int sum,vector<int>& solve,vector<int>& candidates,vector<vector<int>>& ans){
        if(sum<0) return;
        if(sum==0) {
            ans.push_back(solve);
            return;
        }

        solve.push_back(candidates[index]);
        recurse(index,sum-candidates[index],solve,candidates,ans);
        solve.pop_back();
        if(index+1<candidates.size()){
            recurse(index+1,sum,solve,candidates,ans);
        }

    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>> ans;
        vector<int> solve;
        int sum=target;
        recurse(0,sum,solve,candidates,ans);
        return ans;
    }
};
