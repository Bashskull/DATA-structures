/*
class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = nullptr;
        right = nullptr;
    }
};
*/

class Solution {
  public:
    void leftist(vector<int> &ans,Node *root,int level){
            if(root==NULL) return;
            if(level==ans.size()) ans.push_back(root->data);
            leftist(ans,root->left,level+1);
            leftist(ans,root->right,level+1);
        }
    vector<int> leftView(Node *root) {
        // code here
        vector<int> ans;
        leftist(ans,root,0);
        return ans;
        }
};
